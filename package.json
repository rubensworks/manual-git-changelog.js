{
  "name": "manual-git-changelog",
  "version": "1.3.0",
  "description": "A simple tool for appending to a changelog based on git commits and tags.",
  "keywords": [
    "changelog",
    "git",
    "tags",
    "simple",
    "manual"
  ],
  "main": "index.js",
  "typings": "index",
  "repository": "git@github.com:rubensworks/manual-git-changelog.js.git",
  "author": "Ruben Taelman <rubensworks@gmail.com>",
  "bugs": {
    "url": "https://github.com/rubensworks/manual-git-changelog.js/issues"
  },
  "homepage": "https://github.com/rubensworks/manual-git-changelog.js#readme",
  "license": "MIT",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "index.d.ts",
    "index.js"
  ],
  "pre-commit": [
    "build",
    "lint",
    "test"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "coveralls": "^3.0.0",
    "jest": "^23.4.1",
    "pre-commit": "^1.2.2",
    "stryker": "^0.29.4",
    "stryker-api": "^0.21.1",
    "stryker-jest-runner": "^1.2.1",
    "stryker-typescript": "^0.14.0",
    "ts-jest": "^23.10.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.7.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "test/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "scripts": {
    "test": "jest ${1}",
    "test-mutation": "stryker run",
    "test-watch": "jest ${1} --watch",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "tslint index.ts lib/**/*.ts test/**/*.ts --exclude '**/*.d.ts'",
    "build": "tsc",
    "validate": "npm ls",
    "prepare": "npm run build"
  }
}
